@foreach (var cat in Model)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <br />
            <h2>@Html.DisplayFor(modelItem => cat.Name)</h2>

            @Html.Label("Gender", "Gender:")
            @Html.DisplayFor(modelItem => cat.Gender)
            <br />

            @if (cat.Characteristics.Count > 0)
            {
                @Html.Label("Characteristics", "Characteristics:")
                <br />
                <ul>
                    @foreach (var characteristic in cat.Characteristics)
                    {
                        <li>@characteristic.Name</li>
                    }
                </ul>
            }

            @if (cat.CatType != null)
            {
                @Html.Label("CatType", "Cat Type:")
                <br />
                <ul>
                    <li>Breed:  @cat.CatType.Breed </li>

                    <li>Color: @cat.CatType.Color</li>
                </ul>
                <br />
                <br />
            }


            @using (Html.BeginForm(actionName: "Details", controllerName: "Cats", method: FormMethod.Get,
            routeValues: new { id = cat.CatId }))
            {
                <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Details</button>
            }
        </div>
    </div>
}
